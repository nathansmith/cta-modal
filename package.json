{
	"private": true,
	"name": "cta-modal",
	"description": "Web Component call-to-action modal",
	"repository": {
		"type": "git",
		"url": "git@github.com:nathansmith/cta-modal.git"
	},
	"scripts": {
		"build": "npm run build-dist && npm run build-html",
		"build-html": "vite build --base=./ --config vite.config.js",
		"build-dist": "tsc --project tsconfig.json",
		"format": "prettier --write ./*.{css,html,js,json,md,scss} **/*.{css,html,js,json,md,scss}",
		"postbuild-dist": "node ./scripts/postbuild-dist.js",
		"postbuild-html": "node ./scripts/postbuild-html.js",
		"postinstall": "node ./scripts/postinstall.js",
		"prebuild-dist": "rimraf ./dist",
		"prebuild-html": "rimraf ./html",
		"prepare": "node ./scripts/prepare.js",
		"start": "vite --config vite.config.js"
	},
	"dependencies": {
		"rimraf": "^3.0.2"
	},
	"devDependencies": {
		"@typescript-eslint/eslint-plugin": "^5.10.2",
		"eslint": "^8.6.0",
		"eslint-config-prettier": "^8.3.0",
		"eslint-plugin-prettier": "^4.0.0",
		"html-minifier": "^4.0.0",
		"husky": "^7.0.4",
		"lint-staged": "^12.1.7",
		"prettier": "^2.3.0",
		"terser": "^5.10.0",
		"typescript": "^4.5.5",
		"vite": "^2.7.13"
	},
	"lint-staged": {
		"*.{css,html,js,json,md,scss,ts}": "prettier --write"
	}
}
