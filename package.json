{
  "name": "cta-modal",
  "version": "1.0.0",
  "description": "Web Component call-to-action modal",
  "main": "dist/cta-modal.js",
  "author": "Nathan Smith",
  "license": "MIT",
  "homepage": "https://github.com/nathansmith/cta-modal#readme",
  "keywords": [
    "a11y",
    "accessibility",
    "aria-modal",
    "modal",
    "web component"
  ],
  "repository": {
    "type": "git",
    "url": "git@github.com:nathansmith/cta-modal.git"
  },
  "scripts": {
    "build": "npm run test-coverage && npm run build-dist && npm run build-html",
    "build-html": "vite build --base=./ --config vite.config.js",
    "build-dist": "tsc --project tsconfig.json",
    "format": "prettier --write ./*.{css,html,js,json,md,scss,ts} **/*.{css,html,js,json,md,scss,ts}",
    "postbuild": "node ./scripts/postbuild.js",
    "postbuild-dist": "node ./scripts/postbuild-dist.js",
    "postbuild-html": "node ./scripts/postbuild-html.js",
    "prebuild-dist": "rimraf ./dist",
    "prebuild-html": "rimraf ./html",
    "prepublishOnly": "npm run build",
    "prepare": "node ./scripts/prepare.js",
    "start": "vite --config vite.config.js",
    "test": "jest",
    "test-coverage": "jest --coverage"
  },
  "devDependencies": {
    "@babel/core": "^7.17.0",
    "@babel/preset-env": "^7.16.11",
    "@babel/preset-typescript": "^7.16.7",
    "@types/jest": "^27.4.0",
    "@typescript-eslint/eslint-plugin": "^5.10.2",
    "eslint": "^8.6.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^4.0.0",
    "fs-extra": "^10.0.0",
    "html-minifier": "^4.0.0",
    "husky": "^7.0.4",
    "jest": "^27.5.0",
    "lint-staged": "^12.1.7",
    "prettier": "^2.3.0",
    "rimraf": "^3.0.2",
    "terser": "^5.10.0",
    "typescript": "^4.5.5",
    "vite": "^2.7.13"
  },
  "lint-staged": {
    "*.{css,html,js,json,md,scss,ts}": "prettier --write"
  },
  "jest": {
    "collectCoverageFrom": [
      "<rootDir>/src/**/*"
    ],
    "testEnvironment": "jsdom"
  }
}
